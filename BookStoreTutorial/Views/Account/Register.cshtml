@model BookStoreTutorial.Models.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post" asp-controller="Account" asp-action="Register">
    @* Username *@
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Username:</label>
        </div>

        <div class="col-sm-4">
            <input type="text" asp-for="Username" class="form-control" />
        </div>

        <div class="col">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>

    @* Password *@
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Password:</label>
        </div>

        <div class="col-sm-4">
            <input type="text" asp-for="Password" class="form-control" />
        </div>

        <div class="col">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    @* Confirm Password *@
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Confirm Password:</label>
        </div>

        <div class="col-sm-4">
            <input type="text" asp-for="ConfirmPassword" class="form-control" />
        </div>

        <div class="col">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4 offset-2">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4 offset-2">
            Already Registered? <a asp-controller="Account" asp-action="Login">Log In</a>
        </div>
    </div>
</form>