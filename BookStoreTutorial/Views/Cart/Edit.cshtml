@model BookStoreTutorial.Models.DomainModels.CartItem

@{ 
    ViewData["Title"] = "| Edit Cart";
}

<h1>Edit Cart Item</h1>

<form asp-controller="Cart" asp-action="Edit" method="post">
    <ul class="list-group mb-2">
        <li class="list-group-item">@Model.Book.Title</li>

        @* Price *@
        <li class="list-group-item">
            <div class="col-1">
                <label>Price:</label>
            </div>

            <div class="col-1">
                @Model.Book.Price.ToString("c");
            </div>
        </li>

        @* Quantity *@
        <li class="list-group-item">
            <div class="col-1">
                <label asp-for="Quantity">Quantity:</label>
            </div>

            <div class="col-1">
                <select asp-for="Quantity" class="form-control">
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option>@i</option>
                    }
                </select>
            </div>
        </li>
    </ul>

    @* Hidden values *@
    <input type="hidden" asp-for="Book.BookId" />
    <input type="hidden" asp-for="Book.Title" />

    @* CRUD buttons *@
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>